set shell zsh
set shellopts '-eu:--shwordsplit'
set ifs "\n"
set filesep "\n"  # default already

set scrolloff 10
set hidden
set ratios 1:2:1
set info size:time

# Open files
cmd open ${{
  case $(file --mime-type $f -b) in
    text/*) $EDITOR $fx;;
    *) for f in $fx; do setsid $OPENER $f > /dev/null 2> /dev/null & done;;
  esac
}}
map <enter> open

# Use trash
cmd trash %set -f; trash $fx
map <c-d> trash

# Create new file
map t push $touch<space>
